%div{:id=> "#{dom_id task}"}

  %p.card-title
    %strong
      = task.title

  %p.card-text
    = task.body

  %p.card-text
    %strong= t(:'.is_task_scheduled')
    - if task.scheduled
      = t(:true)
    - else
      = t(:false)

  -if task.scheduled
    %p.card-text
      %strong= t(:'.scheduled_date_form')
      =task.scheduled_date

  %p.card-text
    %strong= t(:'.is_task_completed')
    - if task.completed
      = t(:true)
    - else
      = t(:false)
