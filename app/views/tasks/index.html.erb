
<h1>Tasks</h1>
<%= link_to "New task", new_task_path, class: "btn btn-primary m-2" %>
<div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
  <% @tasks.each do |task| %>
    <div class="col">
      <div class="card text-bg-dark mb-3" >
        <div class="card-body">
            <%= render task %>
            <p>
                <%= link_to "Show this task", task, class: "btn btn-primary mt-2"%>
            </p>
        </div>
      </div>
    </div>
  <% end %>
</div>




