<div class="tasks-view rounded-4 p-3 mb-2">
  <div class="d-flex flex-row p-1 text-center justify-content-between mb-2">
    <h1> <%= t(:'.task_header_text') %> </h1>
    <div><%= link_to t(:'.task_header_new_task_text'), new_task_path, data: { turbo_frame: 'modal' }, class: "btn btn-primary" %></div>

  </div>

  <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4 overflow-auto" style="height: 80vh">
    <% @tasks.each do |task| %>
      <div class="col">
        <div class="card text-bg-dark mb-3" >
          <div class="card-body d-flex flex-column">
              <%= render task %>
              <div>
                <%= link_to t(:'.show_task_button_text'), task, data: { turbo_frame: 'modal' }, class: "btn btn-primary btn-sm mt-2"%>
              </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>



