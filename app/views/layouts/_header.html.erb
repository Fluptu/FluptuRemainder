<div class="p-3">
  <h1> Remainder </h1>
</div>

<div class="flex-grow-1"></div>

<div class="flex flex-column float-end">
  <div class="flex-row-reverse">
    <%= render 'shared/change_locale' %>
  </div>
  <div class="d-flex px-2" >
    <% if current_user %>
      <div class="d-block text-end">
        <%= link_to current_user.email, edit_user_registration_path, class: 'login-links' %>
        <%= button_to t(:sign_out), destroy_user_session_path, method: :delete, class: 'login-links bg-transparent border-0' %>
      </div>
    <% else %>
      <div class="p-1">
        <%= link_to t(:sign_up), new_user_registration_path, class: "login-links" %> |
        <%= link_to t(:login), new_user_session_path, class: 'login-links' %>
      </div>
    <% end %>
  </div>
</div>

