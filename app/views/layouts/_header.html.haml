.p-3
  %h1
    = t(:header_text)

.flex-grow-1

.flex.flex-column.float-end
  .flex-row-reverse
    = render 'shared/change_locale'

  .d-flex.px-2
    - if current_user
      .d-block.text-end
        = link_to current_user.email, edit_user_registration_path, class: 'login-links'
